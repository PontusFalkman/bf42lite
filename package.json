{
  "name": "bf42lite",
  "private": true,
  "packageManager": "pnpm@10.20.0",
  "workspaces": ["packages/*", "apps/*"],
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "npm-run-all --parallel dev:*",
    "dev:client": "pnpm --filter @app/client-tauri dev",
    "dev:host": "pnpm --filter @host/node dev",
    "lint": "eslint . --ext .ts",
    "clean": "rimraf **/dist"
  },
  "devDependencies": {
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.6.0",
    "npm-run-all": "^4.1.5"
  }
}